<%- include('header.ejs') %> 
    <div class="container my-5 py-5">
        <% if (exists.length!=0) { %>
            <div class="alert alert-danger text-center">
                Email Exists
            </div>
        <% } %>
        <div class="col-md-5 m-auto text-center">
            <form action="/handleSignUp" method="POST">
                <div class="form-group">
                    <input value="<%= oldInputs.length==0?'':oldInputs[0].name %>" placeholder="Enter your name" name="name" type="text" class=" form-control" />
                </div>
                <% if (errors.find(x=>x.param=='name')) { %>
                 <div class="alert alert-danger">
                     Invalid name
                 </div>
                <% } %>
                <div class="form-group">
                    <input value="<%= oldInputs.length==0?'':oldInputs[0].email %>" placeholder="Enter email" type="email" name="email" class="form-control" />
                </div>
                <% if (errors.find(x=>x.param=='email')) { %>
                    <div class="alert alert-danger">
                        Invalid email
                    </div>
                   <% } %>
                <div class="form-group">
                    <input value="<%= oldInputs.length==0?'':oldInputs[0].password %>" placeholder="Enter you password" type="password" name="password" class="form-control" />
                </div>
                <% if (errors.find(x=>x.param=='password')) { %>
                    <div class="alert alert-danger">
                        Invalid password
                    </div>
                   <% } %>
                <div class="form-group">
                    <input placeholder="confirm Password" type="password" name="confirmPassword" class="form-control" />
                </div>
                <% if (errors.find(x=>x.param=='confirmPassword')) { %>
                    <div class="alert alert-danger">
                        Don't match
                    </div>
                   <% } %>
                <button type="submit" class="btn btn-info w-100">SignUp</button>
            </form>
        </div>
    </div>
<%- include('footer.ejs') %> 

